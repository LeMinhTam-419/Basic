<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_120dp"
        android:hint="@string/user_name"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtPassWord"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_120dp"
        android:hint="@string/pass_word"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/edtUserName"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/with_200dp"
        android:layout_height="@dimen/height_80dp"
        android:layout_marginTop="@dimen/size_120dp"
        app:layout_constraintTop_toTopOf="@id/edtPassWord"
        android:layout_marginLeft="@dimen/size_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/Login"
        android:background="@drawable/shape_one"
        />
</androidx.constraintlayout.widget.ConstraintLayout>