<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imgAvatar"
    android:layout_width="@dimen/with_120dp"
    android:layout_marginTop="@dimen/size_80dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="@dimen/height_120dp"
    android:layout_marginLeft="@dimen/size_140dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@drawable/avatar"
    tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:hint="@string/user_name"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edtNickName"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:hint="@string/nick_name"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtUserName"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edtPassWord"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:hint="@string/user_name"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNickName"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/with_200dp"
        android:layout_height="@dimen/height_80dp"
        android:layout_marginTop="@dimen/size_80dp"
        android:layout_marginLeft="@dimen/size_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/register"
        android:background="@drawable/shape_one"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintTop_toBottomOf="@id/edtPassWord"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>