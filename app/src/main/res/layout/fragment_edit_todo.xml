<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/edtTodo"
        android:layout_width="@dimen/with_300dp"
        android:layout_marginTop="@dimen/size_80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/size_50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/todo_content"
        android:layout_height="@dimen/height_200dp"/>
    <Button
        android:id="@+id/btnEditTodo"
        android:layout_width="@dimen/with_200dp"
        android:layout_height="@dimen/height_80dp"
        android:layout_marginTop="@dimen/size_80dp"
        android:layout_marginLeft="@dimen/size_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/edit_todo"
        android:background="@drawable/shape_two"
        android:textSize="@dimen/size_20dp"
        app:layout_constraintTop_toBottomOf="@id/edtTodo"
         />


</androidx.constraintlayout.widget.ConstraintLayout>